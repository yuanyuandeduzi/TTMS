<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_bg_2">


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/play_im_1"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/p_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="15dp" />

    <TextView
        android:id="@+id/play_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="夏目友人帐：石起和可疑来访者"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/play_im_1"
        app:layout_constraintTop_toTopOf="@+id/play_im_1" />

    <TextView
        android:id="@+id/play_tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="上映时间："
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/play_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[日语]"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/play_tv_country"
        app:layout_constraintTop_toTopOf="@+id/play_tv_country" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="简介："
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/play_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/play_tv_title" />

    <TextView
        android:id="@+id/play_tv_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

</androidx.constraintlayout.widget.ConstraintLayout>